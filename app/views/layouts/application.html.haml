!!!
%html
%head
  %title BuyMyBeer
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body

  .header
    - if current_user
      %h2= "#{current_user.email} (id: #{current_user.id}), owing: #{current_user.beers} beers!"

  .flash
    -flash.each do |key, value|
      -# TODO: Q: Will HAML let me do: ".#{key}= #{value}"?
      = content_tag(:div, value, :class => "#{key}")

  = yield

  -# TODO: Q: Devise is already doing this, how?
  -# = link_to 'Sign in with GitHub', user_omniauth_authorize_path(:github)

  -# Required for Devise ; as indicated by 'rails generate devise:install'.
  %p.notice= notice
  %p.alert= alert

  = debug(params) if Rails.env.development?
  = debug(session) if Rails.env.development?
