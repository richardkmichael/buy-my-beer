- if @user
  = "Welcome #{@user.email}"
- else
  Welcome, please sign in!
  = form_for :user, :url => user_session_path  do |f|
    = f.label          :email, 'Email'
    = f.text_field     :email
    = f.label          :password, 'Password'
    = f.password_field :password
    = f.label     :remember_me
    = f.check_box :remember_me
    = f.submit 'Sign in'
    = link_to "Forgot your password?", new_password_path('user')
